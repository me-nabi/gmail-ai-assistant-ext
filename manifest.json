{
  "name": "Gmail AI Assistant - Auto Reply",
  "description": "AI-powered automatic email reply generator for Gmail with Gemini AI integration",
  "version": "1.0.0",
  "manifest_version": 3,
  
  "permissions": [
    "activeTab", 
    "storage",
    "scripting",
    "contextMenus"
  ],
  
  "host_permissions": [
    "*://mail.google.com/*",
    "*://generativelanguage.googleapis.com/*"
  ],
  
  "content_scripts": [
    {
      "matches": ["*://mail.google.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Gmail AI Assistant",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["*://mail.google.com/*"]
    }
  ],
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}